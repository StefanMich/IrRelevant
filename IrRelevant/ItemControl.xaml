<UserControl x:Class="IrRelevant.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300">
    <Grid x:Name="BackgroundGrid">
        <Grid x:Name="headerGrid" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="300">
            <Label x:Name="Header" Content="Label" HorizontalAlignment="Right" Margin="0,0,26,0" VerticalAlignment="Top" Height="25" Width="248" Background="{x:Null}"/>
            <Image x:Name="Icon" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Width="26" Source="Icons/unknown.jpg"/>
            <Image x:Name="collapseButton" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="26" Source="Icons/collapse.png" MouseUp="collapseButton_MouseUp"/>
        </Grid>
        <Grid x:Name="ContentGrid" HorizontalAlignment="Left" Height="267" Margin="0,25,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</UserControl>
